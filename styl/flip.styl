.popflip-card
    // min-height and width should be set somewhere
    // outside of the library, so they can be customized
    perspective 800px
    position relative
    transition 2800ms

.popflip-front,
.popflip-back
    backface-visibility hidden
    box-sizing border-box
    min-height 100%
    position absolute
    transition 2800ms
    transform-style preserve-3d
    width 100%

.popflip-front
    transform rotateY(0deg)

.popflip-back
    transform rotateY(-180deg)

// a dynamically-created element for scaling the content
.popflip-back-inner
    transition transform 2800ms
    transform-origin 0 0

.popflip-card.flipped .popflip-front
    transform rotateY(180deg)

.popflip-card.flipped .popflip-back
    transform rotateY(0deg)
